<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PPOCRv5 文字识别"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginBottom="48dp"
        android:textColor="#333333" />

    <Button
        android:id="@+id/btnTakePhoto"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="📷 拍照识别"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_primary"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnSelectImage"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="🖼️ 相册选图识别"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_primary"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnRealTimeOCR"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="📹 实时识别"
        android:textSize="18sp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/button_secondary"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="识别模型："
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnModelSwitch"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="Server模型"
            android:textSize="14sp"
            android:background="@drawable/button_model_selector"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提示：Server模型精度更高，Mobile模型速度更快"
        android:textSize="14sp"
        android:textColor="#666666"
        android:gravity="center" />

</LinearLayout>